{
  "name": "log-viewer-plus",
  "displayName": "Log Viewer Plus",
  "description": "A VS Code extension for viewing and filtering logs",
  "version": "0.0.4",
  "publisher": "nicolasramirez",
  "author": "ramirezcgn",
  "keywords": [
    "log",
    "viewer",
    "filter",
    "vscode"
  ],
  "bugs": {
    "url": "https://github.com/ramirezcgn/log-viewer-plus/issues"
  },
  "homepage": "https://github.com/ramirezcgn/log-viewer-plus#readme",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/ramirezcgn/log-viewer-plus.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "log-viewer-plus": [
        {
          "id": "logExplorer",
          "name": "Watches",
          "icon": "images/icon.svg"
        }
      ],
      "logDetailPanel": [
        {
          "type": "webview",
          "id": "logviewerplus.logDetail",
          "name": "Log Detail",
          "when": "logviewerplus.hasOpenLog"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "logviewerplus.selectFiles",
          "when": "view == logExplorer",
          "group": "navigation"
        },
        {
          "command": "logviewerplus.unwatchAll",
          "when": "view == logExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "logviewerplus.unwatchLogResource",
          "when": "viewItem == watchItem-watching",
          "group": "inline"
        },
        {
          "command": "logviewerplus.removeWatch",
          "when": "viewItem == watchItem || viewItem == watchItem-watching",
          "group": "inline"
        }
      ],
      "editor/lineNumber/context": [
        {
          "command": "logviewerplus.toggleBookmark",
          "when": "resourceScheme == 'log-viewer-plus'",
          "group": "bookmarks"
        }
      ],
      "editor/context": [
        {
          "command": "logviewerplus.toggleBookmark",
          "when": "resourceScheme == 'log-viewer-plus'",
          "group": "bookmarks@1"
        },
        {
          "command": "logviewerplus.nextBookmark",
          "when": "resourceScheme == 'log-viewer-plus'",
          "group": "bookmarks@2"
        },
        {
          "command": "logviewerplus.prevBookmark",
          "when": "resourceScheme == 'log-viewer-plus'",
          "group": "bookmarks@3"
        },
        {
          "command": "logviewerplus.clearBookmarks",
          "when": "resourceScheme == 'log-viewer-plus'",
          "group": "bookmarks@4"
        },
        {
          "command": "logviewerplus.nextError",
          "when": "resourceScheme == 'log-viewer-plus'",
          "group": "logNav@1"
        },
        {
          "command": "logviewerplus.prevError",
          "when": "resourceScheme == 'log-viewer-plus'",
          "group": "logNav@2"
        },
        {
          "command": "logviewerplus.nextWarning",
          "when": "resourceScheme == 'log-viewer-plus'",
          "group": "logNav@3"
        },
        {
          "command": "logviewerplus.prevWarning",
          "when": "resourceScheme == 'log-viewer-plus'",
          "group": "logNav@4"
        }
      ],
      "editor/title": [
        {
          "command": "logviewerplus.setSearchPattern",
          "when": "resourceScheme == 'log-viewer-plus' && !logviewerplus.searchActive",
          "group": "navigation@1"
        },
        {
          "command": "logviewerplus.clearSearchPattern",
          "when": "resourceScheme == 'log-viewer-plus' && logviewerplus.searchActive",
          "group": "navigation@1"
        },
        {
          "command": "logviewerplus.setFilterLevel",
          "when": "resourceScheme == 'log-viewer-plus' && !logviewerplus.levelActive",
          "group": "navigation@2"
        },
        {
          "command": "logviewerplus.setFilterLevelActive",
          "when": "resourceScheme == 'log-viewer-plus' && logviewerplus.levelActive",
          "group": "navigation@2"
        },
        {
          "command": "logviewerplus.enableCleanFormat",
          "when": "resourceScheme == 'log-viewer-plus' && !logviewerplus.cleanFormatActive",
          "group": "navigation@3"
        },
        {
          "command": "logviewerplus.disableCleanFormat",
          "when": "resourceScheme == 'log-viewer-plus' && logviewerplus.cleanFormatActive",
          "group": "navigation@3"
        },
        {
          "command": "logviewerplus.setReadModeFull",
          "when": "resourceScheme == 'log-viewer-plus' && !logviewerplus.tailMode",
          "group": "navigation@4"
        },
        {
          "command": "logviewerplus.setReadModeTail",
          "when": "resourceScheme == 'log-viewer-plus' && logviewerplus.tailMode",
          "group": "navigation@4"
        },
        {
          "command": "logviewerplus.exportFiltered",
          "when": "resourceScheme == 'log-viewer-plus'",
          "group": "navigation@5"
        },
        {
          "command": "logviewerplus.configureFilters",
          "when": "resourceScheme == 'log-viewer-plus'",
          "group": "navigation@6"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "log-viewer-plus",
          "title": "Log Viewer Plus",
          "icon": "images/icon.svg"
        }
      ],
      "panel": [
        {
          "id": "logDetailPanel",
          "title": "Log Detail",
          "icon": "images/icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "logviewerplus.toggleFollowTail",
        "title": "Log Viewer Plus: Toggle follow tail"
      },
      {
        "command": "logviewerplus.clearLogView",
        "title": "Log Viewer Plus: Clear log view"
      },
      {
        "command": "logviewerplus.resetLogView",
        "title": "Log Viewer Plus: Reset log view"
      },
      {
        "command": "logviewerplus.unwatchAll",
        "title": "Log Viewer Plus: Unwatch all"
      },
      {
        "command": "logviewerplus.unwatchLogResource",
        "title": "Log Viewer Plus: Stop watching",
        "icon": "$(debug-stop)"
      },
      {
        "command": "logviewerplus.removeWatch",
        "title": "Log Viewer Plus: Remove from list",
        "icon": "$(trash)"
      },
      {
        "command": "logviewerplus.openCurrentFile",
        "title": "Log Viewer Plus: Open current log file"
      },
      {
        "command": "logviewerplus.openLastChanged",
        "title": "Log Viewer Plus: Open the last changed watch"
      },
      {
        "command": "logviewerplus.showExtensionLogs",
        "title": "Log Viewer Plus: Show extension logs"
      },
      {
        "command": "logviewerplus.toggleFilter",
        "title": "Log Viewer Plus: Toggle log filtering"
      },
      {
        "command": "logviewerplus.enableFilter",
        "title": "Log Viewer Plus: Enable filtering",
        "icon": "$(filter)"
      },
      {
        "command": "logviewerplus.disableFilter",
        "title": "Log Viewer Plus: Disable filtering",
        "icon": "$(filter-filled)"
      },
      {
        "command": "logviewerplus.setFilterLevel",
        "title": "Log Viewer Plus: Set filter level",
        "icon": "$(list-unordered)"
      },
      {
        "command": "logviewerplus.setFilterLevelActive",
        "title": "Log Viewer Plus: Set filter level",
        "icon": "$(filter-filled)"
      },
      {
        "command": "logviewerplus.setSearchPattern",
        "title": "Log Viewer Plus: Set search pattern",
        "icon": "$(search)"
      },
      {
        "command": "logviewerplus.clearSearchPattern",
        "title": "Log Viewer Plus: Clear search pattern",
        "icon": "$(search-stop)"
      },
      {
        "command": "logviewerplus.toggleCleanFormat",
        "title": "Log Viewer Plus: Toggle clean format"
      },
      {
        "command": "logviewerplus.enableCleanFormat",
        "title": "Log Viewer Plus: Enable clean format",
        "icon": "$(list-tree)"
      },
      {
        "command": "logviewerplus.disableCleanFormat",
        "title": "Log Viewer Plus: Disable clean format",
        "icon": "$(list-flat)"
      },
      {
        "command": "logviewerplus.configureFilters",
        "title": "Log Viewer Plus: Configure filters",
        "icon": "$(settings-gear)"
      },
      {
        "command": "logviewerplus.exportFiltered",
        "title": "Log Viewer Plus: Export filtered log",
        "icon": "$(export)"
      },
      {
        "command": "logviewerplus.setReadMode",
        "title": "Log Viewer Plus: Set read mode",
        "icon": "$(whole-word)"
      },
      {
        "command": "logviewerplus.setReadModeFull",
        "title": "Log Viewer Plus: Read mode (full file)",
        "icon": "$(whole-word)"
      },
      {
        "command": "logviewerplus.setReadModeTail",
        "title": "Log Viewer Plus: Read mode (tail)",
        "icon": "$(list-selection)"
      },
      {
        "command": "logviewerplus.selectFiles",
        "title": "Log Viewer Plus: Select log files",
        "icon": "$(add)"
      },
      {
        "command": "logviewerplus.toggleBookmark",
        "title": "Log Viewer Plus: Toggle bookmark",
        "icon": "$(bookmark)"
      },
      {
        "command": "logviewerplus.nextBookmark",
        "title": "Log Viewer Plus: Next bookmark",
        "icon": "$(arrow-down)"
      },
      {
        "command": "logviewerplus.prevBookmark",
        "title": "Log Viewer Plus: Previous bookmark",
        "icon": "$(arrow-up)"
      },
      {
        "command": "logviewerplus.clearBookmarks",
        "title": "Log Viewer Plus: Clear all bookmarks"
      },
      {
        "command": "logviewerplus.nextError",
        "title": "Log Viewer Plus: Go to next error",
        "icon": "$(arrow-down)"
      },
      {
        "command": "logviewerplus.prevError",
        "title": "Log Viewer Plus: Go to previous error",
        "icon": "$(arrow-up)"
      },
      {
        "command": "logviewerplus.nextWarning",
        "title": "Log Viewer Plus: Go to next warning"
      },
      {
        "command": "logviewerplus.prevWarning",
        "title": "Log Viewer Plus: Go to previous warning"
      }
    ],
    "keybindings": [
      {
        "command": "logviewerplus.toggleBookmark",
        "key": "ctrl+alt+b",
        "mac": "cmd+alt+b",
        "when": "resourceScheme == 'log-viewer-plus'"
      },
      {
        "command": "logviewerplus.nextBookmark",
        "key": "ctrl+alt+n",
        "mac": "cmd+alt+n",
        "when": "resourceScheme == 'log-viewer-plus'"
      },
      {
        "command": "logviewerplus.prevBookmark",
        "key": "ctrl+alt+p",
        "mac": "cmd+alt+p",
        "when": "resourceScheme == 'log-viewer-plus'"
      },
      {
        "command": "logviewerplus.nextError",
        "key": "F8",
        "when": "resourceScheme == 'log-viewer-plus'"
      },
      {
        "command": "logviewerplus.prevError",
        "key": "shift+F8",
        "when": "resourceScheme == 'log-viewer-plus'"
      }
    ],
    "configuration": {
      "title": "Log Viewer Plus",
      "type": "object",
      "properties": {
        "logViewerPlus.watch": {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "description": "Glob pattern.",
                "oneOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                      "type": "string"
                    }
                  }
                ]
              },
              {
                "type": "object",
                "properties": {
                  "title": {
                    "description": "Text to use in the explorer view and for the tab name.",
                    "type": "string"
                  },
                  "pattern": {
                    "description": "Glob pattern.",
                    "oneOf": [
                      {
                        "type": "string"
                      },
                      {
                        "type": "array",
                        "minItems": 1,
                        "items": {
                          "type": "string"
                        }
                      }
                    ]
                  },
                  "workspaceName": {
                    "description": "When in a multi-root workspace, which workspace should be used to resolve relative patterns.",
                    "type": "string"
                  },
                  "options": {
                    "description": "Options for this watch (overrides logViewerPlus.options).",
                    "type": "object",
                    "properties": {
                      "fileCheckInterval": {
                        "type": "number",
                        "default": 500,
                        "description": "Interval in ms to check for changes in current file."
                      },
                      "fileListInterval": {
                        "type": "number",
                        "default": 2000,
                        "description": "Interval in ms to search for new files."
                      },
                      "ignorePattern": {
                        "type": "string",
                        "description": "This pattern is matched against each segment in the path. Each directory and the file.",
                        "default": "(node_modules|.git)"
                      },
                      "encoding": {
                        "type": "string",
                        "description": "Encoding to use when reading the files. `null` to get default vscode behavior or one of https://github.com/ashtuchkin/iconv-lite/wiki/Supported-Encodings",
                        "default": null
                      }
                    }
                  }
                },
                "required": [
                  "pattern"
                ]
              },
              {
                "type": "object",
                "description": "A group of watches.",
                "properties": {
                  "groupName": {
                    "description": "Name of the group.",
                    "type": "string"
                  },
                  "watches": {
                    "type": "array",
                    "items": {
                      "oneOf": [
                        {
                          "description": "Glob pattern.",
                          "oneOf": [
                            {
                              "type": "string"
                            },
                            {
                              "type": "array",
                              "minItems": 1,
                              "items": {
                                "type": "string"
                              }
                            }
                          ]
                        },
                        {
                          "type": "object",
                          "properties": {
                            "title": {
                              "description": "Text to use in the explorer view and for the tab name.",
                              "type": "string"
                            },
                            "pattern": {
                              "description": "Glob pattern.",
                              "oneOf": [
                                {
                                  "type": "string"
                                },
                                {
                                  "type": "array",
                                  "minItems": 1,
                                  "items": {
                                    "type": "string"
                                  }
                                }
                              ]
                            },
                            "workspaceName": {
                              "description": "When in a multi-root workspace, which workspace should be used to resolve relative patterns.",
                              "type": "string"
                            },
                            "options": {
                              "description": "Options for this watch (overrides logViewerPlus.options).",
                              "type": "object",
                              "properties": {
                                "fileCheckInterval": {
                                  "type": "number",
                                  "default": 500,
                                  "description": "Interval in ms to check for changes in current file."
                                },
                                "fileListInterval": {
                                  "type": "number",
                                  "default": 2000,
                                  "description": "Interval in ms to search for new files."
                                },
                                "ignorePattern": {
                                  "type": "string",
                                  "description": "This pattern is matched against each segment in the path. Each directory and the file.",
                                  "default": "(node_modules|.git)"
                                },
                                "encoding": {
                                  "type": "string",
                                  "description": "Encoding to use when reading the files. `null` to get default vscode behavior or one of https://github.com/ashtuchkin/iconv-lite/wiki/Supported-Encodings",
                                  "default": null
                                }
                              }
                            }
                          },
                          "required": [
                            "pattern"
                          ]
                        },
                        {
                          "type": "object",
                          "description": "A group of watches.",
                          "properties": {
                            "groupName": {
                              "description": "Name of the group.",
                              "type": "string"
                            },
                            "watches": {
                              "type": "array"
                            }
                          },
                          "required": [
                            "groupName",
                            "watches"
                          ]
                        }
                      ]
                    }
                  }
                },
                "required": [
                  "groupName",
                  "watches"
                ]
              }
            ]
          },
          "default": [],
          "description": "Glob patterns of files to watch."
        },
        "logViewerPlus.options": {
          "description": "Global watch options.",
          "type": "object",
          "properties": {
            "fileCheckInterval": {
              "type": "number",
              "default": 500,
              "description": "Interval in ms to check for changes in current file."
            },
            "fileListInterval": {
              "type": "number",
              "default": 2000,
              "description": "Interval in ms to search for new files."
            },
            "ignorePattern": {
              "type": "string",
              "description": "This pattern is matched against each segment in the path. Each directory and the file.",
              "default": "(node_modules|.git)"
            },
            "encoding": {
              "type": "string",
              "description": "Encoding to use when reading the files. `null` to get default vscode behavior or one of https://github.com/ashtuchkin/iconv-lite/wiki/Supported-Encodings",
              "default": null
            }
          }
        },
        "logViewerPlus.windows.allowBackslashAsPathSeparator": {
          "type": "boolean",
          "default": true,
          "description": "Allow to use \"\\\" (as well as \"/\") as a path separator on windows. Won't be able to escape certain pattern characters when enabled."
        },
        "logViewerPlus.showStatusBarItemOnChange": {
          "type": "boolean",
          "default": false,
          "description": "Show an item in the status bar when a watched pattern changes, to quickly access it."
        },
        "logViewerPlus.tailLines": {
          "type": "number",
          "default": 0,
          "description": "Number of lines to show from the end of the file (like tail -n). Use 0 to read the full file."
        },
        "logViewerPlus.logLevel": {
          "description": "Logging level.",
          "enum": [
            "trace",
            "debug",
            "info",
            "warn",
            "error"
          ],
          "default": "error"
        },
        "logViewerPlus.followTailMode": {
          "description": "Follow tail behavior.\n `auto` to start following tail when the end of the log is scrolled into the viewport, and stop following tail when it's scrolled out of the viewport.\n `manual` to only start and stop following tail explicitly.",
          "enum": [
            "auto",
            "manual"
          ],
          "default": "auto"
        },
        "logViewerPlus.filter": {
          "description": "Filter options for log files.",
          "type": "object",
          "properties": {
            "minLevel": {
              "type": "string",
              "enum": [
                "ALL",
                "ERROR",
                "WARN",
                "INFO",
                "DEBUG",
                "TRACE"
              ],
              "default": "ALL",
              "description": "Log level to display. Only logs matching this exact level are shown. Use ALL to show all levels."
            },
            "searchPattern": {
              "type": "string",
              "description": "Search pattern to filter logs (text or regex)."
            },
            "cleanFormat": {
              "type": "boolean",
              "default": false,
              "description": "Show only the message part of logs (removes timestamp, level, and source)."
            },
            "excludePatterns": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Patterns to exclude from logs."
            },
            "includePatterns": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "If set, only show logs matching these patterns."
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "vsce": "vsce package --allow-star-activation --no-yarn"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.80.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  }
}
